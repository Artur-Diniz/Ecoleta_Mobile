<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ecoleta.Views.Ecoponto.LoginEcopontoView"
             Title="LoginEcopontoView">
    <VerticalStackLayout>
        <Entry Placeholder="Digite seu nome de usuÃ¡rio" Text ="{Binding Username}" 
             Margin="0,10,0,0" VerticalOptions="FillAndExpand"
             HorizontalOptions="FillAndExpand">
            </Entry>
            <Entry Placeholder="Digite a senha" Text="{Binding PasswordString}" IsPassword="True" 
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
        </Entry>
        <Button Text="Entrar" Command="{Binding AutenticarCommand}" Margin="0,10,0,0"/>
        <Button Text="Cadastrar-se" Command="{Binding RegistrarCommand}" Margin="0,10,0,0"/>
        
    </VerticalStackLayout>
</ContentPage>